{
  "manifest_version": 3,
  "name": "Română ↔ Chirilică", 
  "version": "1.3",
  "description": "Comută pagina între alfabet latin și chirilic pentru studiu.",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_title": "Română ↔ Chirilică",
    "default_icon": {
      "16": "icons/icon-latin-16.png",
      "32": "icons/icon-latin-32.png",
      "48": "icons/icon-latin-48.png",
      "128": "icons/icon-latin-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
